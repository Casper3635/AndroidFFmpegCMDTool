<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="44dp"
		android:background="@color/colorPrimary"
        >
        <RelativeLayout 
            android:id="@+id/layout_videoProcessActivity_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/bg_click"
            android:clickable="true"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="取消"
                android:textSize="15dp"
                android:textColor="#faf7ee"
                />
        </RelativeLayout>
        <TextView 
            android:id="@+id/tv_videoProcessActivity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="生成GIF"
            android:textColor="#faf7ee"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <RelativeLayout 
            android:id="@+id/layout_videoProcessActivity_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_click"
            android:clickable="true"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="预览"
                android:textSize="15dp"
                android:textColor="#faf7ee"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_above="@+id/layout_videoProcessActivity_ctr"
		    android:background="#000000"
		    >
		    <VideoView 
		        android:id="@+id/vv_videoProcessActivity"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_centerInParent="true"
	        	/>
		    <ProgressBar
				android:id="@+id/pb_videoProcessActivity_video"
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:layout_centerInParent="true"
				/>
		</RelativeLayout>
		<LinearLayout 
		    android:id="@+id/layout_videoProcessActivity_ctr"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:paddingBottom="37.5dp"
		    android:orientation="vertical"
		    android:background="#f1f0ec"
		    >
		    <TextView 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="20dp"
			    android:paddingBottom="20dp"
			    android:gravity="center"
			    android:text="请移动到击球点位置"
			    android:textColor="#afaba1"
			    android:textSize="15dp"
			    />
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="44dp"
		        android:layout_marginLeft="25dp"
		        android:layout_marginRight="25dp"
		        android:background="#000000"
		        >
		        <com.orangecoder.androidffmpegcmdtool.view.GPHorizontalScrollView
			        android:id="@+id/hsv_videoProcessActivity"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
					android:fillViewport="false"
					android:scrollbars="none"
					>
			        <LinearLayout 
			            android:id="@+id/layout_videoProcessActivity_thumbnail"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:orientation="horizontal"
			            />
			    </com.orangecoder.androidffmpegcmdtool.view.GPHorizontalScrollView>
			    <ImageView 
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:layout_centerInParent="true"
			        android:src="@drawable/ic_videoprocessactivity_seekbar_point"
			        />
		    </RelativeLayout>
		</LinearLayout>
     </RelativeLayout>
</LinearLayout>
